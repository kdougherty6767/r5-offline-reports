<Window x:Class="R5OfflineReports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fetch HTML and Save as PDF" Height="300" Width="400">
    <Grid>
        <!-- IP Address Input -->
        <TextBox Name="IpAddressTextBox" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Content="Fetch HTML" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" Width="100" Click="FetchHtmlButton_Click"/>

        <!-- Display Fetched HTML -->
        <TextBox Name="HtmlTextBox" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" Width="350" Height="100" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Save as PDF -->
        <Button Content="Save as PDF" HorizontalAlignment="Left" Margin="20,220,0,0" VerticalAlignment="Top" Width="100" Click="SaveAsPdfButton_Click"/>
    </Grid>
</Window>
