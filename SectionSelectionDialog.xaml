<Window x:Class="R5OfflineReports.SectionSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Sections for PDF" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Select the sections to include in the PDF:" FontWeight="Bold" Margin="0,0,0,10"/>
        <ItemsControl Name="SectionsList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Title}" IsChecked="{Binding IsSelected}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Generate PDF" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,10,0,0" Click="GeneratePdf_Click"/>
    </StackPanel>
</Window>
